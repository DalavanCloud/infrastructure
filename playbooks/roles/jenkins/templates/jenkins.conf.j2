<VirtualHost *:80>
    ServerAdmin {{ apache_server_admin }}
    ServerName {{ apache_server_name }}
    ServerAlias ci
    ProxyRequests Off
    <Proxy *>
        Order deny,allow
        Allow from all
    </Proxy>
    ProxyPreserveHost on
    ProxyPass / http://localhost:8080/ nocanon
    AllowEncodedSlashes NoDecode
</VirtualHost>
